{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "rules": {
    "no-unused-vars": [2, {"vars": "all", "args": "after-used"}],
    "react/jsx-uses-react": [1],
    "react/jsx-uses-vars": [1],
    "react/react-in-jsx-scope": [1],
    "semi": [2, "never"]
  },

  "plugins" :  [
    "react"
  ]
}
